  <%= stylesheet_link_tag "bootstrap.min", "font-awesome.min", "animate.min", "lightbox", "main", "responsive", "sweetalert", "star-rating"%>
  <%= javascript_include_tag "html5shiv", "respond", "jquery", "bootstrap.min", "lightbox.min", "wow.min", "main", "sweetalert.min", "jsFunctions", "star-rating" %>
