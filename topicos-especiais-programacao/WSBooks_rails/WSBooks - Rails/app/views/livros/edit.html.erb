<!-- BASIC FORM ELELEMNTS -->
<div class="row mt">
  <div class="col-lg-12">
    <div class="form-panel">
      <br>
      <br>

      <%= form_for(@livro) do |f| %>


          <div class="form-group">
            <div class="formsCadastro">
              <%= f.label :titulo %><br>
              <%= f.text_field :titulo %>
            </div>
          </div>



          <div class="form-group">
            <div class="formsCadastro">
              <%= f.label :autor %><br>
              <%= f.text_field :autor %>
            </div>
          </div>

          <div class="form-group">
            <div class="formsCadastro">
              <%= f.label :editora %><br>
              <%= f.text_field :editora %>
            </div>


          </div>


          <div class="form-group">
            <div class="formsCadastro">
              <%= f.label :ano %><br>
              <%= f.number_field :ano %>
            </div>


          </div>




          <div class="form-group">
            <div class="formsCadastro">
              <%= f.label :sinopse %><br>
              <%= f.text_area :sinopse %>
            </div>



          </div>



          <div class="form-group">
            <div class="formsCadastro">
              <%= f.label :image %><br>
              <%= f.file_field :image %>
            </div>

          </div>

          <%= f.submit "Update", class: "btn btn-sm btn-info botaoEnviarCadastroLivro actions" %>




          <!--<a href="CadastroUsuario.html" class="btn btn-sm btn-info" type="submit" id = "botaoEnviarCadastro">Enviar</a>-->

      <% end %>

    </div>
  </div><!-- col-lg-12-->
